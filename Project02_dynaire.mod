% 1. Declarations
%--------------------------------------------------------------------------

var z,k,U,c,i,deltaT,x,y;
varexo e;
parameters beta,alpha,delta,phi,rho;

%--------------------------------------------------------------------------
% 2. Parameter values
%--------------------------------------------------------------------------

beta = 1.03^(-0.25);
alpha = 0.36;
delta = 0.0285;
phi = 1.5;
rho = 0.9;

%--------------------------------------------------------------------------
% 3. Model equations
%--------------------------------------------------------------------------

model;
k(+1) = (1-delta*U^(phi))*k + i;
x = rho*x(-1)+e;
z = exp(rho*x(-1)+e);
U = ((phi*delta)^(-1)*alpha*z(-1)^(1-alpha)*k^(alpha-1))^((phi-alpha)^(-1));
c = beta*c(-1)*(alpha*U*(z)^(1-alpha)*(k*U)^(alpha-1)+1-delta*U^phi);
i = (exp((1-alpha)*rho*x(-1)+(1-alpha)*e)*(k*U)^(alpha)-c);
deltaT = delta*U^phi;
y = c+i;
end;

%--------------------------------------------------------------------------
% 4. Steady states
%--------------------------------------------------------------------------

initval;
U = 0.6471;
z= 1;
i = 0.8993;
c = 2.8478;
k= 60.6232;
deltaT = 0.0148;
x = 0;
y = 2.8478+0.8993;
end;

steady(solve_algo=1);
check;

%--------------------------------------------------------------------------
% 5. Shocks and solution
%--------------------------------------------------------------------------

shocks;
var e;
stderr (0.0005)^(0.5);
end;

stoch_simul(order=1, periods = 1000, irf = 1000);
rplot y c i k;